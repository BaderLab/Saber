# Include README(s)
include README.md CONTRIBUTING.md

# Include all .py files under main directory
recursive-include saber *.py

# Include license file
include LICENSE.txt

# Include Logo
include saber_logo.png

# Include config file(s)
global-include *.ini *.yml .coveragerc

# Include Dockerfile
include Dockerfile

# Include test resources
graft saber/tests

# Include docs
graft docs

# Don't include .tox directory
prune .tox

# Don't include notebooks
prune notebooks

# Don't include pycache or .pyc files
global-exclude __pycache__ *.pyc 
