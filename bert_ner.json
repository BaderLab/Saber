{ 
    "verbose": false,

    "model": {
        "model_name": "bert-ner-re",
    
        "pretrained_model_name_or_path": "biobert_v1.1_pubmed",
        
        "dropout_rate": 0.1,
        
        "entity_embedding_size": 128,
        "proj_ffnns_size": 512,

        "num_encoder_layers": 2,
        "num_attn_heads": 2
    },

    "optimizer": {
        "max_grad_norm": 1.0,
        "weight_decay": 0.0
    },

    "dataset": {
        "dataset_folder": "./datasets/CoNLL04",
        "dataset_reader": "CoNLL2004DatasetReader",

        "k_folds": 0,
        "validation_split": 0,

        "batch_size": 32,

        "replace_rare_tokens": false
    },

    "metrics": {
        "criteria": "exact"
    },

    "training": {
        "epochs": 10,

        "output_folder": "./output"
    }
}